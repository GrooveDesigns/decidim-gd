<% if !current_settings.votes_hidden? && current_component.participatory_space.can_participate?(current_user) %>
  <% progress ||= proposal.total_votes_count || 0 %>
  <div id="proposal-<%= proposal.id %>-votes-count" class="progress__bar progress__bar--vertical">
    <div class="progress__bar__title">
      <span class="progress__bar__number"><%= progress %></span><%= t("decidim.proposals.proposals.votes_count.count.other") %>
    </div>
    <% unless current_user || already_nologin_voted?(proposal) %>
      <%= t("decidim.proposals.proposals.votes_count.count.explanation") %>
    <% end %> 
  </div>
<% end %>
